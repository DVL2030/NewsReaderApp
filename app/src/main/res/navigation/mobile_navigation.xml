<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.cosmos.newsreaderapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.cosmos.newsreaderapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="com.cosmos.newsreaderapp.ui.bookmarks.BookmarksFragment"
        android:label="@string/title_bookmarks"
        tools:layout="@layout/fragment_bookmarks" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.cosmos.newsreaderapp.ui.search.SearchFragment"
        android:label="title_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.cosmos.newsreaderapp.ui.settings.SettingsFragment"
        android:label="title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>